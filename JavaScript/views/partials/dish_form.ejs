<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">🍽️ 料理の選択（各都市の思想バランスに反映させるものを選ぶ）
            </h5>
        </div>
        <div class="card-body">
            <form action="/select_dish" method="POST">
                <label for="dish" class="form-label">選ぶ料理</label>
                <select name="selected_dish" id="dish" class="form-select mb-3">
                    <% if (session.completed_dishes && session.completed_dishes.length> 0) { %>
                        <% session.completed_dishes.forEach(dish=> { %>
                            <option value="<%= dish %>" <%=completed_food===dish ? "selected" : "" %>><%= dish %>
                            </option>
                            <% }) %>
                                <% } else { %>
                                    <option disabled>まだ調理された料理がありません</option>
                                    <% } %>
                </select>
                <button type="submit" class="btn btn-primary w-100">🍽️ この料理を選ぶ</button>
            </form>
        </div>
    </div>

    <% if (selectedDishData?.type==="color" ) { %>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">🏙️ 都市への反映</h5>
            </div>
            <div class="card-body">
                <form action="/apply_dish" method="POST">
                    <input type="hidden" name="selected_dish" value="<%= completed_food %>" />
                    <label for="selected_city" class="form-label">選択する都市</label>
                    <select name="selected_city" id="selected_city" class="form-select mb-3">
                        <option value="minato">ミナト州</option>
                        <option value="naniwa">ナニワ自由州</option>
                        <option value="kitano">キタノ大地連邦</option>
                        <option value="misaki">ミサキ港</option>
                        <option value="shirasagi">シラサギ州</option>
                    </select>
                    <button type="submit" class="btn btn-success w-100">📊 都市に反映する</button>
                </form>
            </div>
        </div>
        <% } else if (selectedDishData?.type==="city" ) { %>
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">🏙️ 都市料理を適用</h5>
                </div>
                <div class="card-body">
                    <form action="/apply_dish" method="POST">
                        <input type="hidden" name="selected_dish" value="<%= completed_food %>" />
                        <button type="submit" class="btn btn-success w-100">📊 都市に反映する</button>
                    </form>
                </div>
            </div>
            <% } %>
</div>